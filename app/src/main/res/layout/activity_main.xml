<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gridview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundw"
    android:padding="20dp"


    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:text="Dino Says"
        android:textColor="#77aaff"
        android:backgroundTint="#333E50"
        android:textSize="100sp"
        android:textStyle="bold"
        android:layout_weight=".15"
        android:id="@+id/textView" />
<LinearLayout
    android:layout_height="0dp"
    android:layout_width="wrap_content"
    android:layout_weight=".375"
    android:orientation="horizontal"
    >


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight=".50"
        app:srcCompat="@drawable/greensmalldino"
        />

    <ImageView
        android:paddingTop="50dp"
        android:id="@+id/imageView2"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight=".50"
        app:srcCompat="@drawable/bluedino" />


</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight=".375">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            app:srcCompat="@drawable/yellowdino"

            />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".50"
            app:srcCompat="@drawable/reddino" />



    </LinearLayout>

    <ImageView
        android:id="@+id/dinoplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srcCompat="@drawable/dinoplay"
        android:layout_weight=".15"/>

</LinearLayout>
